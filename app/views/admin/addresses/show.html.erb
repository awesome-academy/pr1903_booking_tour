<% provide(:title,'All tours') %>

<h1>Tours</h1>
<h2>Search Tour</h2>
<div class="row">
  <div class="col-sm-2">
  </div>
  <div class="col-sm-2">
    <%= form_tag(tours_path, method: :get) do %>
    <%= text_field_tag :name, params[:name] %>
  </div>
  <div class="col-sm-2">
    <%= submit_tag "Search"%>
  </div>

  <% end %>
</div>

<%= will_paginate @tours %>
<ul class="addresses">
  <% @tours.each do |tour| %>
    <li>
     <%= link_to tour.name, admin_tour_path(tour), class: "col-md-2" %> 
     <%= link_to "Delete", admin_tour_path(tour), method: :delete,data: { confirm: "You sure?" } %>
    </li>
  <% end %>
</ul>
<%= will_paginate @tours %>
